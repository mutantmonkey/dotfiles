################################################################################
# i3/config - i3 configuration
################################################################################

# font for window titles
font pango:DejaVu Sans Mono, Icons 9

# Window styles
for_window [class="Chromium"]               border none
for_window [class="Gvim"]                   border none
for_window [class="Roxterm"]                border none
for_window [class="Sakura"]                 border none
for_window [class="SshAskpass"]             border none
for_window [class="Termite"]                border none
for_window [class="Xournal"]                border none
for_window [class="hl2_linux"]              fullscreen
for_window [class="mpv"]                    border 1pixel
for_window [class="openarena"]              border none
for_window [class="st-256color"]            border none
for_window [class="Sxiv"]                   border none
for_window [class="ProjectM-pulseaudio"]    border none
for_window [instance="Browser"]             border none

# Colors {{{

# class                 border  bg      fg      indicator
client.focused          #1f1f1f #1f1f1f #dcdccc #9fafaf
client.focused_inactive #3f3f3f #3f3f3f #5b605e #9fafaf
client.unfocused        #3f3f3f #3f3f3f #5b605e #9fafaf
client.urgent           #dca3a3 #3f3f3f #dca3a3 #9fafaf
client.placeholder      #3f3f3f #3f3f3f #5b605e #9fafaf

client.background       #000000

# }}}

# Keybindings {{{
set $m Mod4

# use Mouse+$m to drag floating windows to their wanted position
floating_modifier $m

# start a terminal
bindsym $m+Shift+Return exec /usr/bin/termite

# kill focused window
bindsym $m+c kill

# border styles
bindsym $m+a border none
bindsym $m+s border normal

# start dmenu (a program launcher)
bindsym $m+semicolon exec /usr/bin/dmenu_run -fn 'DejaVu Sans Mono-9' -nb '#3f3f3f' -nf '#dcdccc' -sb '#1e2320' -sf '#f0dfaf'

# lock screen with $m+x
bindsym $m+x    exec /usr/bin/light-locker-command -l

# screenshot with PrintScrn
bindsym Print   exec /usr/bin/canberra-gtk-play -i screen-capture; exec /usr/bin/scrot -e 'mv $f ~/screenshots/'

# brightness keys
bindsym XF86MonBrightnessUp    exec /usr/bin/xbacklight -steps 1 -inc 7
bindsym XF86MonBrightnessDown  exec /usr/bin/xbacklight -steps 1 -dec 7

# volume keys
bindsym XF86AudioRaiseVolume   exec "/usr/bin/canberra-gtk-play -i audio-volume-change; /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- +2%"
bindsym XF86AudioLowerVolume   exec "/usr/bin/canberra-gtk-play -i audio-volume-change; /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- -2%"
bindsym XF86AudioMute          exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle

# change focus
bindsym $m+h focus left
bindsym $m+j focus down
bindsym $m+k focus up
bindsym $m+l focus right

# alternatively, you can use the cursor keys:
bindsym $m+Left focus left
bindsym $m+Down focus down
bindsym $m+Up focus up
bindsym $m+Right focus right

# move focused window
bindsym $m+Shift+h move left
bindsym $m+Shift+j move down
bindsym $m+Shift+k move up
bindsym $m+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $m+Shift+Left move left
bindsym $m+Shift+Right move right
bindsym $m+Shift+Down move down
bindsym $m+Shift+Up move up

# split in horizontal orientation
bindsym $m+i split h

# split in vertical orientation
bindsym $m+o split v

# enter fullscreen mode for the focused container
bindsym $m+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $m+r layout stacking
bindsym $m+t layout tabbed
bindsym $m+y layout default

# toggle tiling / floating
bindsym $m+Shift+space floating toggle

# focus the parent container
bindsym $m+u focus parent

# focus the child container
#bindsym $m+d focus child

# switch to workspace
bindsym $m+1 workspace 1
bindsym $m+2 workspace 2
bindsym $m+3 workspace 3
bindsym $m+4 workspace 4
bindsym $m+5 workspace 5
bindsym $m+6 workspace 6
bindsym $m+7 workspace 7
bindsym $m+8 workspace 8
bindsym $m+9 workspace 9
bindsym $m+0 workspace 10

# move focused container to workspace
bindsym $m+Shift+1 move workspace 1
bindsym $m+Shift+2 move workspace 2
bindsym $m+Shift+3 move workspace 3
bindsym $m+Shift+4 move workspace 4
bindsym $m+Shift+5 move workspace 5
bindsym $m+Shift+6 move workspace 6
bindsym $m+Shift+7 move workspace 7
bindsym $m+Shift+8 move workspace 8
bindsym $m+Shift+9 move workspace 9
bindsym $m+Shift+0 move workspace 10

# reload the configuration file
bindsym $m+Shift+w reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $m+Shift+e restart
# exit i3 (logs you out of your X session)
bindsym $m+Shift+q exit

# move workspaces to other outputs
bindsym $m+bracketleft move workspace to output left
bindsym $m+bracketright move workspace to output right
# }}}

bar {
    position          top
    workspace_buttons yes
    tray_output       none

    status_command    /usr/bin/mmbar-status

    colors {
        background #3f3f3f
        statusline #dcdccc

        focused_workspace  #1e1e1e #1e1e1e #b6bf98
        active_workspace   #3f3f3f #3f3f3f #b6bf98
        inactive_workspace #3f3f3f #3f3f3f #9fafaf
        urgent_workspace   #3d3535 #3d3535 #e37170
    }
}

exec /usr/bin/start-pulseaudio-x11
exec /usr/bin/compton
exec /usr/bin/light-locker
exec /usr/bin/gnome-keyring-daemon --start --components=secrets
