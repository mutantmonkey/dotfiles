#################################################################################
# .mutt/muttrc - mutt configuration
#
# author: mutantmonkey <mutantmonkey@mutantmonkey.in>
################################################################################

source ${HOME}/.mutt/zenburn
source ${HOME}/.mutt/muttgpg

set charset = utf-8         # use utf-8
set mark_old = no           # don't mark unread new messages as old
set move = no               # do not move messages
set pipe_decode = yes       # decode messages before piping

# message display
set pager_index_lines = 5   # display a mini-index in pager
set pager_stop = yes        # do not move to next message when at end
set sort        = threads
set sort_aux    = reverse-last-date-received

# mailcap
set mailcap_path = ${HOME}/.dotfiles/mailcap

# aliases
set alias_file = ${HOME}/.mutt/aliases
set sort_alias = alias
set reverse_alias = yes
source $alias_file

# contacts and autocompletion
set query_command = "lbdbq '%s'"
bind editor <Tab> complete-query

# header cache
set header_cache = ${HOME}/.cache/mutt/headers

# Always use TLS
set ssl_starttls  = yes
set ssl_force_tls = yes

# Do not use system certs, check manually
set ssl_usesystemcerts	= no
set certificate_file	= ~/.mutt/certificates

# IMAP settings
set imap_check_subscribed = yes
set imap_delim_chars = "/"
set imap_idle = yes

source ${HOME}/.mutt/personal

# mailbox
set spoolfile = =INBOX
set record    = =sent
set postponed = =drafts

# keybindings
macro index S   "<save-message>=spam<enter>"    "mark message as spam"
macro index \cb "<pipe-entry>'urlscan'<enter>"  "follow links with urlscan"
macro pager \cb "<pipe-entry>'urlscan'<enter>"  "follow links with urlscan"

# trash folder
folder-hook .      'macro index,pager d "<save-message>=Trash<enter><enter>"'
folder-hook =spam  'macro index,pager d <delete-message>'
folder-hook =Trash 'macro index,pager d <delete-message>'

# sign emails
set pgp_autosign = yes

# status bar color
color status white blue

# polling frequency
set mail_check   = 3600
set timeout      = 10

# outgoing mail
set envelope_from = yes
set edit_headers  = yes
set user_agent    = no

# outgoing addresses
set reverse_name     = yes
set reverse_realname = no

# hide unimportant headers
ignore *
unignore from date subject to cc

# bell on new message
set beep     = yes
set beep_new = yes

# send notification on new mail
set new_mail_command = "notify-send --icon=mail-message-new 'New Mail' '%n new messages, %u unread.' &"

# Presentation {{{
# disable line wrap markers
set markers    = no

# order of preferred mime types
alternative_order text/plain text/enriched text/html
#alternative_order text/html text/enriched text/plain
auto_view text/html
# }}}
